@model Cinema.DataModel.Tickets

@{
    ViewData["Title"] = "Delete";
}

<h3>Are you sure you want to delete this?</h3>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Date
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(modelItem => Model.DateAndTime.DayOfWeek), @Convert.ToString(string.Format("{0:dd/MM/yyyy}", Model.DateAndTime))
        </dd>
        <dt class="col-sm-2">
            Time
        </dt>
        <dd class="col-sm-10">
            @Convert.ToString(string.Format("{0:hh:mm}", Model.DateAndTime))
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>